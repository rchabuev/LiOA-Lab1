#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <Windows.h>

int main(void)
{
	SetConsoleOutputCP(1251); //русификация
	srand(time(NULL));
	int A[10][8];
	int SumArr[10];
	printf("Двумерный массив:\n");
	for (int i = 0; i < 10; i++) {
		for (int j = 0; j < 8; j++) {
			A[i][j] = rand() % 2; //заполнение массива случайными числами
			printf(" %d ", A[i][j]);
		}
		printf("\n");
	}
	printf("Сумма элементов в каждой строке:\n");
	for (int i = 0; i < 10; i++) {
		int sum = 0;
		for (int j = 0; j < 8; j++) {
			sum += A[i][j];
			SumArr[i] = sum;
		}
		printf("%d\n", SumArr[i]);
	}
}
